<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dg.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.example.dg.common.core.domain.entry.User" useGeneratedKeys="true" keyProperty="userId">
        insert into user(
        <if test="userId != null and userId != 0">user_id,</if>
        <if test="roleId != null and roleId != ''">role_id,</if>
        <if test="villageId != null and villageId != 0">village_id,</if>
        <if test="userName != null and userName != ''">user_name,</if>
        <if test="nickName != null and nickName != ''">nick_name,</if>
        <if test="email != null and email != ''">email,</if>
        <if test="avatar != null and avatar != ''">avatar,</if>
        <if test="phone != null and phone != ''">phone,</if>
        <if test="sex != null and sex != ''">sex,</if>
        <if test="password != null and password != ''">password,</if>
        <if test="status != null and status != ''">status,</if>
        <if test="pwdUpdateDate != null">pwd_update_date,</if>
        <if test="createBy != null and createBy != ''">create_by,</if>
        <if test="remark != null and remark != ''">remark,</if>
        create_time
        )values(
        <if test="userId != null and userId != ''">#{userId},</if>
        <if test="roleId != null and roleId != ''">#{roleId},</if>
        <if test="villageId != null and villageId != ''">#{villageId},</if>
        <if test="userName != null and userName != ''">#{userName},</if>
        <if test="nickName != null and nickName != ''">#{nickName},</if>
        <if test="email != null and email != ''">#{email},</if>
        <if test="avatar != null and avatar != ''">#{avatar},</if>
        <if test="phone != null and phone != ''">#{phone},</if>
        <if test="sex != null and sex != ''">#{sex},</if>
        <if test="password != null and password != ''">#{password},</if>
        <if test="status != null and status != ''">#{status},</if>
        <if test="pwdUpdateDate != null">#{pwdUpdateDate},</if>
        <if test="createBy != null and createBy != ''">#{createBy},</if>
        <if test="remark != null and remark != ''">#{remark},</if>
        sysdate()
        )
    </insert>
    <update id="updateUserpasswordByphone">
        UPDATE `user`
        SET password = #{newPwd}
        WHERE phone = #{phone}
    </update>
    <update id="updateUser">
        update user
        <set>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="nickName != null and nickName != ''">
                nick_name = #{nickName},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="point != null and point != ''">
                point = #{point},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="roleId != null and roleId != ''">
                role_id = #{roleId},
            </if>
            <if test="villageId != null and villageId != 0">
                village_id = #{villageId},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="delFlag != null and delFlag != ''">
                del_flag = #{delFlag},
            </if>
            <if test="loginIp != null and loginIp != ''">
                login_ip = #{loginIp},
            </if>
            <if test="loginDate != null">
                login_date = #{loginDate},
            </if>
            <if test="updateBy != null and updateBy != ''">
                update_by = #{updateBy},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            update_time = sysdate()
        </set>
        where user_id = #{userId}
    </update>
    <delete id="deleteUserById">
        DELETE FROM `user`
        WHERE user_id = #{userId}
    </delete>


    <!--配置getMonsterById-->
    <select id="selectUserById" resultType="com.example.dg.common.core.domain.entry.User">
        SELECT * FROM `user` WHERE user_id=#{id}
    </select>

    <select id="getAllUsers" resultType="com.example.dg.common.core.domain.entry.User">
        SELECT * FROM `user`
    </select>

    <select id="selectUserByNameOrPhoneAndPwd" resultType="com.example.dg.common.core.domain.entry.User">
        SELECT * FROM `user`
        WHERE (username = #{nameOrPhone} OR phone = #{nameOrPhone}) AND password = #{password}
    </select>

    <select id="selectUserByNameOrPhone" resultType="com.example.dg.common.core.domain.entry.User">
        SELECT * FROM `user`
        WHERE username = #{username} OR phone = #{phone}
    </select>
    <select id="selectUserByPhone" resultType="com.example.dg.common.core.domain.entry.User">
        SELECT * FROM `user`
        WHERE phone = #{phone}
    </select>
    <select id="selectUserByUserName" resultType="com.example.dg.common.core.domain.entry.User">
        select * from `user` where user_name = #{userName} and del_flag = '0'
    </select>

    <select id="selectUserPageByCondition" resultType="com.example.dg.common.core.domain.entry.User">
        select * from `user` 
        where del_flag = '0'
        <if test="condition != null and condition != ''">
            and (user_name like concat('%', #{condition}, '%') 
            or phone like concat('%', #{condition}, '%')
            or nick_name like concat('%', #{condition}, '%'))
        </if>
        order by create_time desc
    </select>

    <update id="updateUserRole">
        update `user` 
        set role_id = #{roleId},
            update_time = sysdate()
        where user_id = #{userId}
    </update>

</mapper>
